<div class="sidebar-left col-lg-2 p-0">
    <nav class="navbar navbar-expand-lg navbar-light" id="sidebar-menu">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarLeftMain" aria-controls="navbarLeftMain" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarLeftMain">
            <ul class="navbar-nav mr-auto" id="menu">
            {% set i = 0 %}
            {% for menu in menus %}
            <li class="nav-item">{% if menu.href %}<a href="{{ menu.href }}" class="nav-link active"> {{ menu.name }}</a>{% else %}<a href="#collapse{{ i }}" data-toggle="collapse" class="parent collapsed"><i class="fa {{ menu.icon }} fw"></i> {{ menu.name }}</a>{% endif %}
            {% set i = i + 1 %}
            {% endfor %}
            </ul>

        </div>
    </nav> <!-- End navbar -->
</div>